						<AbsDimension x="55" y="10"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$parentItemIcon">
							<Offset>
								<AbsDimension x="8" y="-26"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
			<OnShow>
				getglobal(this:GetName().."NeedText"):SetText("|cFFFF0000"..NEED..": 0|r")
